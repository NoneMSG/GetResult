<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:textSize="32sp"
        android:text="Caller Activity"
        android:textColor="#ff0000"
        android:textStyle="italic|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="51dp" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btnCallee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvData"
        android:layout_below="@+id/tvData"
        android:layout_marginStart="21dp"
        android:layout_marginTop="31dp"
        android:text="Callee Activity" />

    <TextView
        android:id="@+id/viewData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnCallee"
        android:layout_below="@+id/btnCallee"
        android:text="data" />

</RelativeLayout>